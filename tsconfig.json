{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "experimentalDecorators": true,
        "module": "commonjs",
        "declaration": true,
        "importHelpers": true,
        "incremental": true,
        "tsBuildInfoFile": "tsbuildinfo.json",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/public/plugins.ts",
        "src/public/mixins/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/public/**/*.ts",
        "src/types/**/*.ts"
    ]
}
