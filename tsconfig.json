{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "src/public/plugins.ts",
        "src/public/mixins/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/public/**/*.ts",
        "src/types/api/**/*.ts",
        "src/types/ui-api/**/*.ts",
        "src/types/node_modules/**/*"
    ]
}
