{
    "compilerOptions": {
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "target": "es6",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/public/**/*.ts"
    ]
}
